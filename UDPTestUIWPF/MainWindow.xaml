<Window x:Class="UDPTestUIWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UDPTestUIWPF"
        Title="UDP test" Height="450" Width="600">

    <Window.Resources>
        <local:UDPDataModel x:Key="UdpModel"></local:UDPDataModel>
        <local:ConvertStrInt x:Key="ConvertStrInt"></local:ConvertStrInt>
        <local:ConvertStrIPAddress x:Key="ConvertStrIPAddress"></local:ConvertStrIPAddress>
    </Window.Resources>

    <Grid Margin="0,0,2,4" DataContext="{StaticResource UdpModel}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="58*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Name="IPAddressTextBox"
                 HorizontalAlignment="Left"
                 Height="50"
                 Margin="10,63,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding IpAddress,
                        Converter={StaticResource ConvertStrIPAddress},
                        UpdateSourceTrigger=LostFocus,
                        Mode=TwoWay}"
                 VerticalAlignment="Top"
                 Width="292" FontSize="16"
                 IsEnabled="{Binding IsChecked, ElementName=SendRadioButton}" />

        <TextBox Name="PortTextBox"
                 HorizontalAlignment="Left"
                 Height="50"
                 Margin="10,187,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Port,
                        Converter={StaticResource ConvertStrInt},
                        UpdateSourceTrigger=LostFocus,
                        Mode=TwoWay}"
                 VerticalAlignment="Top"
                 Width="292" FontSize="16" />

        <TextBox Name="MessageTextBox"
                 HorizontalAlignment="Left"
                 Height="275"
                 Margin="321,63,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Message, Mode=TwoWay}"
                 VerticalAlignment="Top"
                 Width="235" FontSize="16" />

        <Label Name="IPAdressLabel"
               Content="IP Adress:"
               HorizontalAlignment="Left"
               Margin="10,25,0,0"
               VerticalAlignment="Top"
               FontSize="16"
               FontWeight="Bold"
               IsEnabled="{Binding IsChecked, ElementName=SendRadioButton}"
               Height="30"
               Width="80"/>

        <Label Content="Port:"
               HorizontalAlignment="Left"
               Margin="10,151,0,0"
               VerticalAlignment="Top"
               FontSize="16"
               FontWeight="Bold"
               Height="30"
               Width="80" />

        <Label Content="Message:"
               HorizontalAlignment="Left"
               Margin="321,25,0,0"
               VerticalAlignment="Top"
               FontSize="16"
               FontWeight="Bold"
               Height="30"
               Width="80" />

        <Button Name="StartButton"
                Content="Start"
                HorizontalAlignment="Left"
                Margin="170,300,0,0"
                VerticalAlignment="Top"
                Width="130"
                Height="40"
                FontSize="16"
                FontWeight="Bold"
                Click="StartButton_Click"
                IsDefault="True" />

        <StackPanel HorizontalAlignment="Left"
                    Height="30"
                    Margin="10,300,0,0"
                    VerticalAlignment="Top"
                    Width="100">

            <RadioButton Name="SendRadioButton"
                         Content="Send"
                         IsChecked="True" />

            <RadioButton Name="ReceiveRadioButton"
                         Content="Receive" />

        </StackPanel>

        <Label Name="StatusLabel"
               Content="Статус соединения"
               HorizontalAlignment="Left"
               Margin="10,370,0,0"
               VerticalAlignment="Top"
               Width="292" Height="26"/>

        <Button Content="Обновить список сообщений"
                HorizontalAlignment="Left"
                Margin="320,350,0,0"
                VerticalAlignment="Top"
                Width="235"
                Height="40"
                IsEnabled="{Binding IsChecked, ElementName=ReceiveRadioButton}"
                Click="Button_Click"/>
        
        <CheckBox Name="MultiSendCheckBox"
                  Content="MultiSend"
                  HorizontalAlignment="Left"
                  Margin="10,280,0,0"
                  VerticalAlignment="Top"
                  IsEnabled="{Binding IsChecked, ElementName=SendRadioButton}"/>

    </Grid>
</Window>