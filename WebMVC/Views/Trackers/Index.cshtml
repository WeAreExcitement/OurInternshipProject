@model IEnumerable<DAL.Entities.GPSTracker>
@{
    ViewBag.Title = "Index";
    Layout = "_PersonalAccountLayout";
}

<h2>Трекеры</h2>
<hr />

<div class="form-group">
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tracker in Model)
            {
                <tr>
                    <td>@tracker.Name</td>
                    <td>
                        <a href="@Url.Action("Map", "Trackers", new { id = tracker.Id})" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </a>
                        <a href="@Url.Action("Edit", "Trackers", new { id = tracker.Id})" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="@Url.Action("ConfirmDelete", "Trackers", new { id = tracker.Id})" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="form-group">
    <a href="@Url.Action("Register", "Trackers")" class="btn btn-default">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</div>

