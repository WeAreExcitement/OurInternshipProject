@model WebMVC.Models.TrackersViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<h2>Регистрация нового трекера</h2>
<hr />

@using (Ajax.BeginForm("Register", "Trackers",
    new AjaxOptions {
        UpdateTargetId = "tracker-list",
        OnSuccess = "showRegisterTrackerBtn",
        InsertionMode = InsertionMode.InsertAfter
    }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.Id)</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.PhoneNumber)</label>
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.Name)</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Сохранить" />
    <button class="btn btn-default" type="button" onclick=showRegisterTrackerBtn()>Отмена</button>
}

