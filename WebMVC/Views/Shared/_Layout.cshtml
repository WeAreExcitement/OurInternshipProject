<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GPSTrackers</title>

    @Styles.Render("~/bundles/stylebundle")
    @Scripts.Render("~/bundles/jquery")

</head>

<body>

    <!-- Top menu -->
    <nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="height: 98px; width: 246px;" href="index.html">GPS Tracker</a> <!--Logo-->
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="top-navbar-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Личный кабинет", "Index", "PersonalArea")</li>
                        <li>@Html.ActionLink("Выход", "LogOff", "Account")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Кабинет Админа", "Index", "Home")</li>
                    }
                    <li>@Html.ActionLink("О программе", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Тест", "SignalRView", "Home")</li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Top content -->
    <div>
        @RenderBody()
        @RenderSection("scripts", required: false)
    </div>

    <!--[if lt IE 10]>
        <script src="~/Content/js/placeholder.js"></script>
    <![endif]-->

</body>

</html>