@model IEnumerable<DAL.Entities.ApplicationUser>

@{
    ViewBag.Title = "Пользователи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Areas/admin/Views/_back_button.cshtml")

<div class="panel panel-default">
    <div class="panel-heading">
        Пользователи
        <a href="@Url.Action("Create","Users",new { area = "admin" },null)" class="btn btn-success btn-xs" data-modal ="" id="btnCreate" style="float:right; width:20%;">
            <span class="glyphicon glyphicon-plus"></span>Добавить
        </a>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Users", new { id = item.Id, area = "admin" },null)" class="btn btn-success btn-xs" data-modal="" id="btnEdit" style="float:right">
                        <span class="glyphicon glyphicon-apple"></span>Редактировать
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete","Users", new { id = item.Id, area = "admin" },null)" class="btn btn-success btn-xs" data-modal="" id="btnDelete" style="float:right">
                        <span class="glyphicon glyphicon-trash"></span>Удалить
                    </a>
                </td>
            </tr>
        }
    </table>
</div>

@Html.Partial("~/Areas/admin/Views/_modal_partial.cshtml")

@section scripts{
    @Scripts.Render("~/Areas/admin/scripts/modal-partial.js")
}