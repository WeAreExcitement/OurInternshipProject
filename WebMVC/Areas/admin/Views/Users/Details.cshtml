@model DAL.Entities.ApplicationUser

@{
    ViewBag.Title = "О пользователе";
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">О пользователе</h3>
</div>

<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => Model.Id, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.UserName, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.Email, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.EmailConfirmed, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.EmailConfirmed, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.PhoneNumber, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.PhoneNumberConfirmed, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.PhoneNumberConfirmed, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.AccessFailedCount, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.AccessFailedCount, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.LockoutEnabled, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.LockoutEnabled, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.LockoutEndDateUtc, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.LockoutEndDateUtc, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.PasswordHash, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.PasswordHash, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.SecurityStamp, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.SecurityStamp, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.TwoFactorEnabled, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.TwoFactorEnabled, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.UserProfile, new { @class = "control-label col-sm-3" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.UserProfileId, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Close</button>
</div>

